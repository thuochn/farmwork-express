extends ./layouts/common

block content
	h1 Create Book
	a(href="/") Books

	if errors
		each error in errors
			.alert.alert-primary= error

	form(action="/books/create", method="POST")
		input(type= "text", class="form-control", placeholder="BookName", name="title", value=values ? values.title : "")
		input(type= "text", class="form-control", placeholder="BookDescription", name="description", value=values ? values.description : "")
		button(type="submit", class="btn btn-primary") create