extends ./layouts/common

block content
	h1 Thong tin Sach
	a(href="/transactions/create") Thuê Sách
	form(action= "/books/view/" + product.id + "/delete", method= "GET")
		button(type="submit", class="btn btn-primary") DeleteBook
	form(action= "/books/view/" + product.id + "/update", method= "POST")
		input(type= "text", class="form-control", placeholder= "update title", name="title")
		button(type="submit", class="btn btn-primary") update
	table.table
		tr
			th Book
			th MoTa
			tr
				td=product.title
				td=product.description
