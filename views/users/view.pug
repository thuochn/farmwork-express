extends ../layouts/common

block content
	h1 User
	form(action= "/users/view/" + user.id + "/update", method= "POST")
		input(type= "text", class="form-control mt-2", placeholder= "EditName", name="name")
		input(type= "text", class="form-control mt-2", placeholder= "EditPhonel", name="phonel")
		input(type= "text", class="form-control mt-2", placeholder= "EditDate", name="date")
		button(type="submit", class="btn btn-primary mt-2") update
	form(action= "/users/view/" + user.id + "/delete")
		button(type="submit", class="btn btn-primary mt-2") DELETE USER
	table.table
		tr
			th Name
			th Phonel
			th Date
			tr
				td= user.name
				td= user.phonel
				td= user.date + "ngay"